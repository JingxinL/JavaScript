function letterFinder (word, match){
    for (var i=0; i<word.length; i++){
        if (word[i]==match){
         console.log('Found the', match, 'at', i)}
         else {console.log('---No match found at', i)}
    }
}

letterFinder ('test','t')

      // Note: don't forget VAR
      // Note: word.length 
      // Note: within the function, parameters need to be put in quotes
