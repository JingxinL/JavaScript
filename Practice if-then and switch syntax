var age= 10;


if (age >=65) {
console.log('You get your income from your pension')
}

else if (age<65 && age >=18){
    console.log('Each month you get a salary')
}

else if (age<18){
    console.log('You get an allowance')
}

else {
    console.log('The value of the age variable is not numerical')
}

var age=100
switch (age){
    case '>=65':
        console.log('You get your income from your pension');
        break;

        case '18<=age<65':
        console.log('Each month you get a salary');
        break;

        case '<18':
            console.log('You get an allowance')
            break;

            default:
            console.log('The value of the age variable is not numerical')
            ;
            break;
}

var day='Sunday';
switch (day){
    case 'Monday':
        console.log('Reading');
        break;

    case 'Tuesday':
        console.log('baking');
        break;
        case 'Wednesday':
            console.log('Riding');
            break;
        case 'Thursday':
            console.log('Singing');
            break;
        case 'Friday':
            console.log('Walking');
            break;
        case 'Saturday':
            console.log('Fishing');
            break;
        case 'Sunday':
            console.log('Skiing');
            break;

            default:
                console.log('There is no such day');

}


